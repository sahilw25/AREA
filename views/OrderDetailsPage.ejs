        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Order Details</h1>
                    <% for(let order of orders) {%>
                        <div>Order Id: <%= order.id  %></div>
                        <ul>
                            <% for(let product of order.products) {%>
